<div
 class="wrapper wrapper-modal-window wrapper-modal-window-edit-xblock"
 aria-describedby="modal-window-description"
 aria-labelledby="modal-window-title"
 aria-hidden=""
 role="dialog">
    <div class="modal-window confirm modal-editor modal-lg">
        <form class="edit-xblock-modal" action="#">
            <div class="modal-header">
                <h2 class="title modal-window-title"><%= gettext("Edit Component") %></h2>
                <ul class="modal-modes action-list action-modes">
                    <li class="action-item" data-mode="editor"><a href="#" class="editor-button"><%= gettext("Editor") %></a></li>
                    <li class="action-item" data-mode="settings"><a href="#" class="settings-button"><%= gettext("Settings") %></a></li>
                </ul>
            </div>
            <div class="modal-content">
                <div class="xblock-editor"></div>
            </div>
            <div class="modal-actions">
                <h3 class="sr"><%= gettext("Actions") %></h3>
                <ul>
                <li class="action-item">
                    <a href="#" class="button action-primary action-save"><%= gettext("Save") %></a>
                </li>
                <li class="action-item">
                    <a href="#" class="button action-secondary action-cancel"><%= gettext("Cancel") %></a>
                </li>
                </ul>
            </div>
        </form>
    </div>
</div>
